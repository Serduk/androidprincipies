        <activity android:name=".BoundServiceCheckActivity" />

        <service
            android:name=".BroadCastSenderService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".BroadCastReceiverExampleActivity" />
        <activity android:name=".ForFragmentsTestingActivity" />
        <activity android:name=".StartAndroidServicesActivityExamples" />

        <service
            android:name=".MyServiceStartAndroidLessons"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".StartAndroidMyService"
            android:enabled="true"
            android:exported="true" />
        <service android:name=".StartAndroidMyServiceBroadcast" />

        <activity android:name=".StartAndroidLocalBindingServicesActivity" />

        <service
            android:name=".StartAndroidLocalBinding"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".StartAndroidForegroundServiceActivity" />

        <service
            android:name=".StartAndroidForegroundService"
            android:exported="false"></service>
    </application>

</manifest>